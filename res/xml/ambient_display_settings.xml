<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/ambient_display_screen_title">

    <PreferenceCategory
            android:title="@string/ambient_display_category_triggers">

    <Preference
        android:key="ambient_display_custom"
        android:title="@string/ambient_display_screen_title" >
        <intent
            android:action="com.android.settings.action.EXTRA_SETTINGS"
            android:targetPackage="com.custom.ambient.display"
            android:targetClass="com.custom.ambient.display.DozeSettings" />
    </Preference>

    <SwitchPreference
        android:key="ambient_display_always_on"
        android:title="@string/doze_always_on_title"
        android:summary="@string/doze_always_on_summary" />

    <SwitchPreference
        android:key="ambient_display_notification"
        android:dependency="ambient_display_always_on"
        android:title="@string/doze_title"
        android:summary="@string/doze_summary" />
      
<!--<Preference
        android:key="ambient_display_double_tap"
        android:title="@string/ambient_display_title"
        android:fragment="com.android.settings.gestures.DoubleTapScreenSettings" />

        <Preference
            android:key="ambient_display_pick_up"
            android:title="@string/ambient_display_pickup_title"
            android:fragment="com.android.settings.gestures.PickupGestureSettings" />
        -->

    </PreferenceCategory>
    <PreferenceCategory 
            android:key="ambient_display_battery_status" 
	    android:title="@string/ambient_display_show_battery_cat"> 

    <SwitchPreference
        android:key="ambient_doze_auto_brightness"
        android:dependency="ambient_display_always_on"
        android:title="@string/ambient_doze_auto_brightness_title"
        android:summary="@string/ambient_doze_auto_brightness_summary" />

    <com.xtended.xtensions.preferences.SystemSettingIntListPreference
        android:key="ambient_bottom_display"
        android:dependency="ambient_display_always_on"
        android:entries="@array/ambient_display_bottom_info_entries"
        android:entryValues="@array/ambient_display_bottom_info_values"
        android:title="@string/ambient_display_bottom_info_title"
        android:summary="%s"
        android:defaultValue="0" />

    <Preference
        android:key="force_ambient_for_media_pref"
        android:title="@string/force_ambient_for_media_pref_title"
        android:summary="@string/force_ambient_for_media_pref_summary"
        android:fragment="com.xtended.xtensions.fragments.AmbientTicker" />

    </PreferenceCategory> 

</PreferenceScreen>
